<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid  android:color="@color/text_color"/>
            <stroke
                android:width="2dp"
                android:color="@color/text_color" />
           
            <padding
                android:left="3dp"
                android:top="2dp"
                android:right="3dp"
                android:bottom="2dp" />
        </shape>
    </item>


    <item>        
        <shape>
           <solid  android:color="@color/button_background"/>
            <stroke
                android:width="1dp"
                android:color="@color/text_color" />
           
            <padding
                android:left="3dp"
                android:top="2dp"
                android:right="3dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>